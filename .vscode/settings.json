{
  "files.autoSave": "afterDelay",
  "window.newWindowDimensions": "inherit",
  "window.openFilesInNewWindow": "on",
  "window.restoreWindows": "all",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // When enabled, will trim trailing whitespace when saving a file.
  "files.trimTrailingWhitespace": true,
  "workbench.iconTheme": "vscode-icons",
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.compactFolders": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "go.formatTool": "goformat",
  "go.useLanguageServer": true,
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.autoIndent": "advanced",
    "editor.formatOnSaveMode": "file"
  },
  "workbench.startupEditor": "newUntitledFile",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "go.lintOnSave": "workspace",
  // "go.lintOnSave": "package",
  "go.autocompleteUnimportedPackages": true,
  "editor.wordWrap": "on",
  "git.autofetch": true,
  "vscode-postgres.defaultConnection": "steampipe",
  "[sql]": {
    // "editor.formatOnSave": false,
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "pgsql.intelliSense.lowerCaseSuggestions": true,
  "pgFormatter.keywordCase": "lowercase",
  "pgFormatter.functionCase": "lowercase",
  "pgFormatter.commaBreak": true,
  "pgFormatter.spaces": 2,
  // "vs-kubernetes": {
  //   "vscode-kubernetes.helm-path.mac": "/Users/lalitbhardwaj/.vs-kubernetes/tools/helm/darwin-amd64/helm",
  //   "vscode-kubernetes.minikube-path.mac": "/Users/lalitbhardwaj/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  // },
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    },
    {
      "viewType": "jupyter-notebook",
      "filenamePattern": "*.ipynb"
    }
  ],
  "files.associations": {
    "*.spc": "terraform",
    "*.sp": "terraform",
    ".sql": "sql"
  },
  "go.toolsManagement.autoUpdate": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false
  },
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "aws.profile": "profile:default",
  "cSpell.customFolderDictionaries": [

  ],
  "cSpell.enabled": true,
  "json.schemas": []
}